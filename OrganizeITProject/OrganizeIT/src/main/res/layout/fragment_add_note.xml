<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".AddNoteActivity$PlaceholderFragment">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editNoteText"
            android:hint="@string/note_enter_hint"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="29dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter note content:"
            android:id="@+id/textViewAddNote"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editNoteText"
            android:id="@+id/linearLayoutNoteActionButtons">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_button_label"
                android:id="@+id/buttonSaveNote"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_button_label"
                android:id="@+id/buttonCancelSaveNote"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/linearLayoutNoteActionButtons" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
